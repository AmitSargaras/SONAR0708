<?xml version="1.0" encoding="UTF-8"?>
<reports>
	<report>
		<query>
			SELECT rptlog.PARTYID "PARTY_ID",
  rptlog.PARTYNAME "PARTY_NAME",
  a.facility_name "FACILITY_NAME",
  a.LMT_ID AS FACILITY_ID,
  (SELECT entry_name
  FROM common_code_category_entry
  WHERE category_code='FACILITY_CATEGORY'
  AND entry_code     = a.facility_cat
  AND ACTIVE_STATUS  ='1'
  ) "FACILITY_CATEGORY",
  rptLog.LINECODE "LINE_CODE",
  rptLog.SERIALNO "SERIAL_NUMBER",
  rptLog.TYPEOFCOVENANT "TYPEOFCOVENANT",
  rptLog.CONDITION1 "CONDITION1",
  rptLog.CONDITION2 "CONDITION2",
  rptLog.CONDITION3 "CONDITION3",
  rptLog.CONDITION4 "CONDITION4",
  rptLog.CONDITION5 "CONDITION5"
FROM CMS_FCUBSREPORTDATA_LOG rptlog,
  SCI_LSP_APPR_LMTS a,
  CMS_FACILITY_NEW_MASTER fac,
  CMS_FCUBSDATA_LOG FCUBS
			</query>
		<whereClause>
			<mandatoryClause>
				rptlog.FACILITYID=a.LMT_ID
AND a.LMT_FAC_CODE     = fac.NEW_FACILITY_CODE
AND FCUBS.FILENAME     = rptlog.FILENAME
		
			</mandatoryClause>
			<param>
				<name>facility</name>
				<condition> AND fac.NEW_FACILITY_CODE= </condition>
			</param>
			<param>
				<name>party</name>
				<condition> AND FCUBS.PARTYID = </condition>
			</param>
			<param>
				<name>fromDate</name>
				<condition> AND TRUNC(FCUBS.REQUESTDATE) BETWEEN </condition>
			</param>
			<param>
				<name>toDate</name>
				<condition> AND </condition>
			</param>			
		</whereClause>
		<reportParamters>
			<reportColumns>
			    <reportColumn>
					<width>25</width>
					<format>textFormat</format>
					<header>Party ID</header><!-- 1 -->
				</reportColumn>
				<reportColumn>
					<width>25</width>
					<format>textFormat</format>
					<header>Party Name</header><!-- 2 -->
				</reportColumn>
				<reportColumn>
					<width>25</width>
					<format>textFormat</format>
					<header>Facility Name</header><!-- 3 -->
				</reportColumn>
				<reportColumn>
					<width>25</width>
					<format>textFormat</format>
					<header>Facility ID</header><!-- 4 -->
				</reportColumn>
				<reportColumn>
					<width>25</width>
					<format>textFormat</format>
					<header>Facility category</header><!-- 5 -->
				</reportColumn>
				<reportColumn>
					<width>50</width>
					<format>textFormat</format>
					<header>LINE CODE</header><!-- 6 -->
				</reportColumn>
				<reportColumn>
					<width>25</width>
					<format>textFormat</format>
					<header>SERIAL NUMBER</header><!-- 7 -->
				</reportColumn>
				<reportColumn>
					<width>50</width>
					<format>textFormat</format>
					<header>Type of Specific Covenants</header><!-- 8 -->
				</reportColumn>				
				<reportColumn>
					<width>50</width>
					<format>textFormat</format>
					<header>Condition 1</header><!-- 9 -->
				</reportColumn>
				<reportColumn>
					<width>50</width>
					<format>textFormat</format>
					<header>Condition 2</header><!-- 10 -->
				</reportColumn>
				<reportColumn>
					<width>50</width>
					<format>textFormat</format>
					<header>Condition 3</header><!-- 11 -->
				</reportColumn>
				<reportColumn>
					<width>50</width>
					<format>textFormat</format>
					<header>Condition 4</header><!-- 12 -->
				</reportColumn>
				<reportColumn>
					<width>50</width>
					<format>textFormat</format>
					<header>Condition 5</header><!-- 13 -->
				</reportColumn>
			</reportColumns>
			<reportName>CLIMS to CORE Specific Covenant Report (Line Level)</reportName>
		</reportParamters>
	</report>
</reports>