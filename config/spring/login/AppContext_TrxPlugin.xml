<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop"
	xsi:schemaLocation="
			http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
			http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.5.xsd">

	<description>
		Transaction Plugin context files, mainly deal with 'autoProxyCreator', to intercept MessageHandler , ORM/JDBC-based DAOs.
	</description>
	
	<bean id="matchAuthAndLoginMethodTxInterceptor" class="org.springframework.transaction.interceptor.TransactionInterceptor">
		<property name="transactionManager" ref="txManager" />
		<property name="transactionAttributeSource">
			<bean
				class="org.springframework.transaction.interceptor.NameMatchTransactionAttributeSource">
				<property name="nameMap">
					<map>
						<entry key="authenticateAndLogin*" value="PROPAGATION_REQUIRED" />
					</map>
				</property>
			</bean>
		</property>
	</bean>

	<bean id="authenticationTrxAutoProxyCreator" class="org.springframework.aop.framework.autoproxy.BeanNameAutoProxyCreator">
		<property name="interceptorNames">
			<list>
				<idref bean="matchAuthAndLoginMethodTxInterceptor" />
			</list>
		</property>
		<property name="beanNames">
			<list>
				<idref bean="cmsAuthenticationManager" />
				<!--<idref bean="as400AuthenticationManager"/>
			--></list>
		</property>
	</bean>
</beans>