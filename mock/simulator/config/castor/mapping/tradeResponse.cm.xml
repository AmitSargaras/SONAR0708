<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapping PUBLIC "-//EXOLAB/Castor Mapping DTD Version 1.0//EN" "http://castor.org/mapping.dtd">

<mapping>
	<description>TradeSpring Response Mapping</description>

	<class name="com.integrosys.simulator.host.stp.STPMessage">
		<map-to xml="Msg"/>
		<field name="MsgHeader" type="com.integrosys.simulator.host.stp.STPHeader">
			<bind-xml name="MsgHeader" />
		</field>
		<field name="MsgBody" type="com.integrosys.simulator.host.stp.STPBody">
			<bind-xml name="MsgBody" />
		</field>
	</class>

	<class name="com.integrosys.simulator.host.stp.trade.TradeResponseHeader" extends="com.integrosys.simulator.host.stp.STPHeader">
		<map-to xml="MsgHeader"/>
		<field name="MessageId" type="string">
			<bind-xml name="MessageId" />
		</field>
		<field name="MessageType" type="string">
			<bind-xml name="MessageType" />
		</field>
		<field name="MessageRefNum" type="string">
			<bind-xml name="MessageRefNum" />
		</field>
		<field name="PublishType" type="string">
			<bind-xml name="PublishType" />
		</field>
		<field name="PublishDate" type="string">
			<bind-xml name="PublishDate" />
		</field>
		<field name="Source" type="string">
			<bind-xml name="Source" />
		</field>
	</class>
	                                          
  <class extends="com.integrosys.simulator.host.stp.STPMessage" name="com.integrosys.simulator.host.stp.trade.TradeMessage">
  	<map-to xml="Response"/>
	</class> 
  
  <class name="com.integrosys.simulator.host.stp.trade.TradeResponseBody" extends="com.integrosys.simulator.host.stp.STPBody">
		<field name="responseCode" type="string"> 
      <bind-xml name="RESPONSE_CD" node="element"/>
    </field>
		<field name="responseMessage" type="string">
		  <bind-xml name="RESPONSE_MESSAGE" node="element"/>
    </field>
	</class>
</mapping>