<?xml version="1.0" encoding="UTF-8"?> 
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/"
                     debug="false">

	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
  		     <param name="ConversionPattern" value="[%t] %-5p - %d{DATE}:%c - %m%n"/>
		</layout>
	</appender>
  	
  <appender name="TraceFILEOUT" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="D:\dev\abcms\branches\CLIMS_P3\mock\simulator\config\logs\SystemTrace.log"/>
        <param name="DatePattern" value="'.'yyyy-MM-dd"/>
		<layout class="org.apache.log4j.PatternLayout">
  		     <param name="ConversionPattern" 
                            value="[%t] %-5p - %d{DATE}:%c - %m%n"/>
		</layout>
	</appender>
	
  <appender name="MQMessageCenter" class="com.integrosys.simulator.host.mq.MQMessageCenter">
		<param name="File" value="D:\dev\abcms\branches\CLIMS_P3\mock\simulator\config\logs/MQMessageCenter.log"/>
        <param name="DatePattern" value="'.'yyyy-MM-dd"/>
        <layout class="org.apache.log4j.PatternLayout">
               <param name="ConversionPattern"
                            value="[%t] %-5p - %d{DATE}:%c - %m%n"/>
        </layout>
	</appender>
	

	<category name="com.integrosys.simulator.host.mq" additivity="false">
		<priority value="info" />
        <appender-ref ref="console" />
	</category>

	<category name="TraceFilter" additivity="false">
		<priority value="info" />
		<appender-ref ref="TraceFILEOUT" />
	</category>

	<category name="TrxProcess " additivity="false">
		<priority value="info" />
		<appender-ref ref="TraceFILEOUT" />
	</category>

	<category name="ReadProcess" additivity="false">
		<priority value="info" />
		<appender-ref ref="TraceFILEOUT" />
	</category>

	<root>
		<priority value="info"/>
		<appender-ref ref="console" />
	</root>

</log4j:configuration>