<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN" "http://jakarta.apache.org/struts/dtds/struts-config_1_3.dtd">
<struts-config>
    <form-beans type="org.apache.struts.action.ActionFormBean">
        <form-bean name="BondDetailsUploadForm" type="com.integrosys.cms.ui.bonddetailsupload.BondDetailsUploadForm"/>
    </form-beans>
            
    <action-mappings type="com.integrosys.base.uiinfra.common.IntegroActionMapping">
        <action path="/BondDetailsUpload" type="com.integrosys.cms.ui.bonddetailsupload.BondDetailsUploadAction" name="BondDetailsUploadForm" validate="false" scope="request">
            <forward name="prepare_upload" path="/template/common_template.jsp">
                <set-property property="rightFrame" value="/collateral/marketablesec/bonddetailsupload/upload.jsp"/>
                <set-property property="title" value="title.sys.admin.maint.bonddetailsupload"/>
            </forward>
            <forward name="upload_error" path="/template/common_template.jsp">
                <set-property property="rightFrame" value="/collateral/marketablesec/bonddetailsupload/upload.jsp"/>
                <set-property property="title" value="title.sys.admin.maint.bonddetailsupload"/>
            </forward>
            <forward name="upload" path="/template/common_template.jsp">
                <set-property property="rightFrame" value="/collateral/marketablesec/bonddetailsupload/list_upload.jsp"/>
                <set-property property="title" value="title.sys.admin.maint.bonddetailsupload"/>
            </forward>
            <forward name="download_report" path="/file/popup.jsp" />
            <forward name="checker_prepare_process" path="/template/common_template.jsp">
            	 <set-property property="rightFrame" value="/collateral/marketablesec/bonddetailsupload/checker_prepare_process.jsp"/>
                <set-property property="title" value="title.sys.admin.maint.bonddetailsupload"/>
            </forward>
            <forward name="checker_reject_error" path="/template/common_template.jsp">
                <set-property property="rightFrame" value="/collateral/marketablesec/bonddetailsupload/checker_prepare_process.jsp"/>
                <set-property property="title" value="title.sys.admin.maint.bonddetailsupload"/>
            </forward>
	        <forward name="checker_reject" path="/template/common_template.jsp">
                <set-property property="rightFrame" value="/collateral/marketablesec/bonddetailsupload/checker_reject.jsp"/>
                <set-property property="title" value="title.sys.admin.maint.bonddetailsupload"/>
            </forward>
            <forward name="maker_prepare_close" path="/template/common_template.jsp">
                <set-property property="rightFrame" value="/collateral/marketablesec/bonddetailsupload/maker_prepare_close.jsp"/>
                <set-property property="title" value="title.sys.admin.maint.bonddetailsupload"/>
            </forward>
	        <forward name="maker_close" path="/template/common_template.jsp">
                <set-property property="rightFrame" value="/collateral/marketablesec/bonddetailsupload/maker_close.jsp"/>
                <set-property property="title" value="title.sys.admin.maint.bonddetailsupload"/>
            </forward>
            <forward name="checker_approve" path="/template/common_template.jsp">
                <set-property property="rightFrame" value="/collateral/marketablesec/bonddetailsupload/list_upload.jsp"/>
                <set-property property="title" value="title.sys.admin.maint.bonddetailsupload"/>
            </forward>                         
        </action>
    </action-mappings>
    
    <message-resources key="message-uploadteam" parameter="ApplicationResources-upload"/>
</struts-config>