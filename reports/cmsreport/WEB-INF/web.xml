<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
	<display-name>Report Viewer</display-name>
	<description>
		Report Viewer
	</description>
	
	<context-param>
		<param-name>reportPath</param-name>
		<param-value>C:\\CrystalOutPut</param-value>
	</context-param>
	<context-param>
		<param-name>securityCheck</param-name>
		<param-value>https://p520.integrosys.com/cms/ReportServlet?flag=check</param-value>
	</context-param>
	<context-param>
		<param-name>accessDenied</param-name>
		<param-value>accessdenied.jpg</param-value>
	</context-param>
	<context-param>
		<param-name>transactionDenied</param-name>
		<param-value>transactiondenied.jpg</param-value>
	</context-param>

	<context-param>
		<param-name>pdf</param-name>
		<param-value>application/pdf</param-value>
	</context-param>
	<context-param>
		<param-name>xls</param-name>
		<param-value>application/vnd.ms-excel</param-value>
	</context-param>
	<context-param>
		<param-name>jpg</param-name>
		<param-value>image/jpeg</param-value>
	</context-param>
	
	<servlet>
		<servlet-name>GetReport</servlet-name>
      		<servlet-class>com.cms.servlet.GetReport</servlet-class>
		<init-param>
			<param-name>debug</param-name>
			<param-value>on</param-value>
		</init-param>
	</servlet>
	        
	<servlet-mapping>
		<servlet-name>GetReport</servlet-name>
        	<url-pattern>/GetReport.image</url-pattern>
    	</servlet-mapping>
</web-app>
