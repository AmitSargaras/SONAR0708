<!-- InstanceBeginEditable name="Content" -->
<table width="70%" border="0" align="center" cellpadding="0" cellspacing="0" class="tblFormSection">
  <thead>
    <tr>
      <td><h3>Notification - $!{ob.subject}</h3></td>
    </tr>
    <tr>
      <td><hr /></td>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><table width="100%" border="0" align="center" cellpadding="0" cellspacing="0" class="tblInfo">
          <tbody>
            <tr class="odd">
              <td width="20%" class="fieldname">To</td>
              <td width="30%" class="odd">$!{ob.receipient}</td>
              <td width="20%" class="fieldname">Date</td>
              <td width="30%" class="odd">$!{DateUtil.formatDate("dd/MMM/yyyy", ${ob.notificationDate})}</td>
            </tr>
            <tr class="even">
              <td class="fieldname">Subject</td>
              <td colspan="3">$!{ob.subject}</td>
            </tr>
          </tbody>
        </table></td>
    </tr>
    <tr>
      <td>&nbsp;</td>
    </tr>
    <tr>
      <td><table width="100%" border="0" cellspacing="0" cellpadding="0" class="tblInput">
          <thead>
          </thead>
          <tbody>
            <tr class="odd">
              <td class="fieldname">Stock Exchange</td>
              <td>$!{ob.stockExchange}</td>
            </tr>
            <tr class="even">
              <td class="fieldname">Last Index</td>
              <td>$!{ob.oldIndex}</td>
            </tr>
            <tr class="odd">
              <td class="fieldname">Current Index</td>
              <td>$!{ob.currentIndex}</td>
            </tr>
            <tr class="even">
              <td class="fieldname">Percentage (%) of drop</td>
              <td>$!{ob.percentChange}</td>
            </tr>
          </tbody>
        </table></td>
    </tr>
  </tbody>
</table>

