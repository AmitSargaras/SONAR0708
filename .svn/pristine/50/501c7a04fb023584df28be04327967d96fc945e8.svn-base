<!-- InstanceBeginEditable name="Content" -->
<table width="70%" border="0" align="center" cellpadding="0" cellspacing="0" class="tblFormSection">
  <thead>
    <tr>
      <td><h3>Notification - $!{ob.subject}</h3></td>
    </tr>
    <tr>
      <td><hr /></td>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><table width="100%" border="0" align="center" cellpadding="0" cellspacing="0" class="tblInfo">
          <tbody>
            <tr>
              <td width="20%" class="fieldname">To</td>
              <td width="30%" class="odd">$!{ob.receipient}</td>
              <td width="20%" class="fieldname">Date</td>
              <td width="30%" class="odd">$!{DateUtil.formatDate("dd/MMM/yyyy", ${ob.notificationDate})}</td>
            </tr>
            <tr>
              <td class="fieldname">Customer Legal Name</td>
              <td class="even">$!{ob.leName}</td>
              <td class="fieldname">CIF/ID No.</td>
              <td class="even">$!{ob.leID}</td>
            </tr>
			
          	#set ($facList = $VelocityUtil.convertMap2List(${ob.getFacilityMap()}))
						#foreach ($facOB in $facList)
            <tr class="odd">
              <td class="fieldname">Facility ID/Description</td>
              <td>$!{facOB.getFacilityID()} - $!{facOB.getFacilityDesc()}</td>
              <td class="fieldname">Account No</td>
              <td>
              		#set ($accIDList = $VelocityUtil.convertMap2List(${facOB.getAccIDMap()}))
              		#foreach ($accID in $accIDList)
              			$!{accID} <br>
              		#end
              		&nbsp;
              </td>
            </tr>
            #end


            <tr>
              <td class="fieldname">Subject</td>
              <td colspan="3" class="even">$!{ob.subject}</td>
            </tr>
          </tbody>
        </table></td>
    </tr>
    <tr>
      <td>&nbsp;</td>
    </tr>
    <tr>
      <td>
      	<table width="100%" border="0" cellspacing="0" cellpadding="0" class="tblInput">
          <thead>
          </thead>
          <tbody>
            <tr class="even">
              <td class="fieldname">Security ID</td>
              <td>
              	#set ($sourceIDList = $VelocityUtil.convertMap2List(${ob.getSourceIDMap()}))
              	#foreach ($sourceID in $sourceIDList)
              	$!{sourceID}<br>
              	#end
              </td>
            </tr>
            <tr class="odd">
              <td class="fieldname">Security Maturity Date</td>
              <td>$!{DateUtil.formatDate("dd/MMM/yyyy", ${ob.maturityDate})}&nbsp;</td>
            </tr>
            <tr class="even">
              <td class="fieldname">Type/SubType of Security </td>
              <td>$!{ob.type} - $!{ob.subType}</td>
            </tr>
            <tr class="odd">
              <td class="fieldname">Security Amount</td> <!-- CMV -->
              <td>$!{VelocityUtil.formatAmount(${ob.getAmount()})}</td>
            </tr>
            <tr class="even">
              <td class="fieldname">Security Evaluation Expiry Date</td>
              <td>$!{DateUtil.formatDate("dd/MMM/yyyy", ${ob.expiryDate})}&nbsp;</td>
            </tr>
            <tr class="odd">
                <!--
                #if (${ob.daysDue} < 0)
	                <td class="fieldname">Days Security Due for Evaluation</td>
	            #else
	                <td class="fieldname">Days Past Evaluation Date</td>
	            #end -->
	            <td class="fieldname">Days Past Due</td>
                <td>$!{VelocityUtil.abs(${ob.daysDue})}</td>
            </tr>	
			<!--
            <tr class="even">
	            <td class="fieldname">OMV & FSV</td>
                <td>$!{VelocityUtil.formatAmount(${ob.fsvAmount()})}</td>
            </tr>
            <tr class="odd">
	            <td class="fieldname">Valuation Date</td>
                <td>$!{DateUtil.formatDate("dd/MMM/yyyy", ${ob.valuationDate})}&nbsp;</td>
            </tr>
			-->
            <tr class="even">
	            <td class="fieldname">Frequency of valuation</td>
                <td>$!{VelocityUtil.abs(${ob.valFreq})}&nbsp;$!{ob.valFreqUnit}</td>
            </tr>
          </tbody>
        </table>
      </td>
    </tr>
<!--
    <tr>
      <td>&nbsp;</td>
    </tr>

    <tr>
      <td>
      	<table width="100%" border="0" cellspacing="0" cellpadding="0" class="tblInput">
          <thead>
              <td class="fieldname">S/N</td>
              <td class="fieldname">Facility ID</td>
              <td class="fieldname">Facility Description</td>
              <td class="fieldname">Account No.</td>          
          </thead>
          <tbody>
          	#set ($facList = $VelocityUtil.convertMap2List(${ob.getFacilityMap()}))
						#set ($sNo = 1)
