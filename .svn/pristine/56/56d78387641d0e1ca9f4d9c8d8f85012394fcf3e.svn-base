<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xmlns:aop="http://www.springframework.org/schema/aop"
		xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
			http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.5.xsd">
	<bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
		<property name="triggers">
			<list>
				<ref bean="ewsStockDeferralTrigger" />
			</list>
		</property>
	</bean>
	
	<bean id="ewsStockDeferralTrigger" class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
		<property name="jobDetail" ref="ewsStockDeferralJobDetail" />
  		  <!--<property name="cronExpression" value="0 0 4 * * ?" />  -->
  		  <!-- <property name="cronExpression" value="0 0 4 1 * ?" /> -->
  		  <property name="cronExpression" value="${ftp.ews.stockDeferral.scheduler.time}" />
         <!-- <property name="cronExpression" value="0 0/05 * * * ?" />  -->    
 	</bean>
	
	<bean id="ewsStockDeferralJobDetail" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject" ref="ewsStockDeferralUploadJob" />
		<property name="targetMethod" value="execute" />
	</bean> 

	<bean name="ewsStockDeferralUploadJob" class="com.integrosys.cms.batch.ewsStockDeferral.schedular.ewsStockDeferralFileUploadJob"/>
	


</beans>