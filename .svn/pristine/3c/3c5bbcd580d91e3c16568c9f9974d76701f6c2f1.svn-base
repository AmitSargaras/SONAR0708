<?xml version="1.0"?>
<!DOCTYPE mapping PUBLIC "-//EXOLAB/Castor Mapping DTD Version 1.0//EN" "http://castor.org/mapping.dtd">

<mapping>
    <description>Collateral Mapping - CO004 - Guarantee</description>
    
    <class name="com.integrosys.cms.host.eai.security.bus.guarantee.GuaranteeSecurity">
        <map-to xml="GuaranteeDetail"/>
        <field name="LOSSecurityId"                 type="string">
        	<bind-xml name="LOSSecurityId" />
        </field>
        <field name="GuaranteesDescription"         type="string">
        	<bind-xml name="GuaranteesDescription" />
        </field>
        <field name="ClaimPeriod"       			type="long">
        	<bind-xml name="ClaimPeriod" />
        </field>
        <field name="ClaimPeriodUOM"         		type="string">
        	<bind-xml name="ClaimPeriodUOM" />
        </field>
        <field name="RefNo"                         type="string">
        	<bind-xml name="RefNo" />
        </field>
        <field name="GuaranteeAmt"                  type="double">
        	<bind-xml name="GuaranteeAmt" />
        </field>
        <field name="GuaranteeDate"                 type="string">
        	<bind-xml name="GuaranteeDate" />
        </field>
        <field name="IssuingBank"                   type="string">
        	<bind-xml name="SecurityIssuer" />
        </field>
        <field name="IssuingBankCtry"               type="string">
        	<bind-xml name="SecurityIssuerCtry"/>
        </field>
        <field name="BeneficiaryName"               type="string">
        	<bind-xml name="BeneficiaryName" />
        </field>
        <field name="Comments"     			        type="string">
        	<bind-xml name="Comments" />
        </field>
		<field name="ReimbursementBank"            	type="com.integrosys.cms.host.eai.StandardCode">
        	<bind-xml name="ReimbursementBank" />
        </field>
		<field name="IssueDate"            			type="string">
        	<bind-xml name="IssueDate" />
        </field>
		<field name="Scheme"           				type="com.integrosys.cms.host.eai.StandardCode">
        	<bind-xml name="Scheme" />
        </field>
		<field name="SecuredAmount"            		type="double">
        	<bind-xml name="SecuredAmount" />
        </field>
		<field name="UnsecuredAmount"             	type="double">
        	<bind-xml name="UnsecuredAmount" />
        </field>
		<field name="SecuredPercentage"            		type="integer">
        	<bind-xml name="SecuredPercentage" />
        </field>
		<field name="UnsecuredPercentage"             	type="integer">
        	<bind-xml name="UnsecuredPercentage" />
        </field>
		<field name="LgCancellationDate"             	type="string" handler="com.integrosys.cms.host.eai.castor.CustomDateFieldHandler">
        	<bind-xml name="LGCancellationDate" />
        </field>
        <field name="ChangeIndicator"               type="string">
        	<bind-xml name="ChangeIndicator" />
        </field>
        <field name="UpdateStatusIndicator"         type="string">
        	<bind-xml name="UpdateStatusIndicator" />
        </field>
    </class>

</mapping>