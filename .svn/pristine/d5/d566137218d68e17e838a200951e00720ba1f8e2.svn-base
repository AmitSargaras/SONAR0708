CREATE OR REPLACE PROCEDURE sp_mig_cam_ui_facility_REM_VALIDATE
AS
  PUT_CALL_OPTION VARCHAR2(10);
  CURSOR CR_DATA
  IS
    SELECT * FROM DAY_ZERO_MIG_CAM_UI_FACILITY_SCREEN WHERE UPDATE_STATUS = 'N';
  RC_DATA CR_DATA%ROWTYPE;
BEGIN
  OPEN CR_DATA;
  LOOP
    FETCH CR_DATA INTO RC_DATA;
    EXIT
  WHEN CR_DATA%NOTFOUND;
    PUT_CALL_OPTION   := RC_DATA.PUT_CALL_OPTION;
    IF PUT_CALL_OPTION = 'PUT' OR PUT_CALL_OPTION='CALL' THEN
      UPDATE DAY_ZERO_MIG_CAM_UI_FACILITY_SCREEN
      SET IS_VALIDATED        = 'Y'
      WHERE CMS_LSP_APPR_LMTS_ID = RC_DATA.CMS_LSP_APPR_LMTS_ID;
    END IF;
  END LOOP;
  CLOSE CR_DATA;
  COMMIT;
END sp_mig_cam_ui_facility_REM_VALIDATE;