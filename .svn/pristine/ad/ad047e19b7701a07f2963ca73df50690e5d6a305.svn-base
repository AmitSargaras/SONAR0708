
<!-- InstanceBeginEditable name="Content" -->
<table width="70%" border="0" align="center" cellpadding="0" cellspacing="0" class="tblFormSection">
  <thead>
    <tr>
      <td><h3>Notification - $!{ob.subject}</h3></td>
    </tr>
    <tr>
      <td><hr /></td>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><table width="100%" border="0" align="center" cellpadding="0" cellspacing="0" class="tblInfo">
          <tbody>
            <tr class="odd">
              <td width="20%" class="fieldname">To</td>
              <td width="30%">$!{ob.receipient}</td>

              <td width="20%" class="fieldname">Date</td>
              <td width="30%">$!{DateUtil.formatDate("dd/MMM/yyyy", ${ob.notificationDate})}</td>
            </tr>
            <tr class="even">
              <td class="fieldname">Customer Legal Name</td>
              <td>$!{ob.leName}</td>
              <td class="fieldname">CIF / ID No.</td>
              <td>$!{ob.leID}</td>
            </tr>
            <tr class="odd">
              <td class="fieldname">Subject</td>
              <td colspan="3">$!{ob.subject}</td>
            </tr>
          </tbody>
        </table></td>
    </tr>
    <tr>
      <td>&nbsp;</td>
    </tr>
    <tr>
      <td><table width="100%" border="0" cellspacing="0" cellpadding="0" class="tblInput">
          <thead>
          </thead>
          <tbody>
            <tr class="odd">
              <td class="fieldname">Approval Date of BCA </td>
              <td>$!{DateUtil.formatDate("dd/MMM/yyyy", ${ob.approvalDate})}</td>
            </tr>
            <tr class="even">
              <td class="fieldname">Due Date to issue DDN</td>
              <td>$!{DateUtil.formatDate("dd/MMM/yyyy", ${ob.dueDate})}</td>
            </tr>
            <tr class="odd">
              <td class="fieldname">No. of Days Overdue</td>
              <td>$!{ob.daysDue}</td>
            </tr>
            <tr class="even">
              <td class="fieldname">BCA Originating Location</td>
              <td>$!{ob.originatingCountry}</td>
            </tr>
          </tbody>
        </table></td>
    </tr>
  </tbody>
</table>

