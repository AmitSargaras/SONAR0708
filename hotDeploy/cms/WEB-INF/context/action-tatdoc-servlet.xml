<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xmlns:aop="http://www.springframework.org/schema/aop"
		xsi:schemaLocation="
			http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
			http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.5.xsd">

	<description>
		struts config to context mapping files for Tat Document module
	</description>

	<bean name="/TatDoc" scope="prototype" autowire="byName" class="com.integrosys.cms.ui.tatdoc.TatDocAction">
		<property name="nameCommandMap">
			<map>
				<entry key="ReadTatDocCommand" value-ref="TatDocAction.ReadTatDocCommand"/>
				<entry key="ApproveTatDocCommand" value-ref="TatDocAction.ApproveTatDocCommand"/>
				<entry key="RejectTatDocCommand" value-ref="TatDocAction.RejectTatDocCommand"/>
				<entry key="CloseTatDocCommand" value-ref="TatDocAction.CloseTatDocCommand"/>
				<entry key="SubmitTatDocCommand" value-ref="TatDocAction.SubmitTatDocCommand"/>
				<entry key="CommitTatDocCommand" value-ref="TatDocAction.CommitTatDocCommand"/> 
				<entry key="SaveTatDocCommand" value-ref="TatDocAction.SaveTatDocCommand"/>
				<entry key="TatDocValidationCommand" value-ref="TatDocAction.TatDocValidationCommand"/>
			</map>
		</property>
	</bean>
	
	<bean name="/TatDocSolicitorInstruction" scope="prototype" autowire="byName" class="com.integrosys.cms.ui.tatdoc.TatDocSolicitorInstructionAction">
		<property name="jdbcTemplate">
			<bean class="org.springframework.jdbc.core.JdbcTemplate">
				<property name="dataSource" ref="ofaPool" />
			</bean>
		</property>
		<property name="transactionTemplate">
			<bean class="org.springframework.transaction.support.TransactionTemplate">
				<property name="transactionManager" ref="txManager" />
			</bean>
		</property>
	</bean>

</beans>