<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN" "http://jakarta.apache.org/struts/dtds/struts-config_1_3.dtd">
<struts-config>
    <form-beans type="org.apache.struts.action.ActionFormBean">    
        <form-bean name="BflForm" type="com.integrosys.cms.ui.bfl.BflForm">
        </form-bean>        
    </form-beans>
    
    <action-mappings type="com.integrosys.base.uiinfra.common.IntegroActionMapping">
        <action path="/Bfl" type="com.integrosys.cms.ui.bfl.BflAction" name="BflForm" validate="false" scope="request">
            <forward name="after_bfl" path="/bfl/bfl.jsp">
            </forward>
            <forward name="after_issue_draft_bfl" path="/template/common_frame_template.jsp">
                <set-property property="leftFrame" value="/template/common_left_frame.jsp"/>
                <set-property property="rightFrame" value="/bfl/issue_draft_bfl.jsp"/>
                <set-property property="title" value="title.bfl.issuedraftbfl"/>
            </forward>
            <forward name="after_confirm_issue_draft_bfl" path="/template/common_frame_template.jsp">
                <set-property property="leftFrame" value="/template/common_left_frame.jsp"/>
                <set-property property="rightFrame" value="/common/ack_approve.jsp"/>
                <set-property property="title" value="title.bfl.issuedraftbfl"/>
            </forward>
            <forward name="after_send_draft_bfl" path="/template/common_frame_template.jsp">
                <set-property property="leftFrame" value="/template/common_left_frame.jsp"/>
                <set-property property="rightFrame" value="/bfl/send_draft_bfl.jsp"/>
                <set-property property="title" value="title.bfl.senddraftbfl"/>
            </forward>
            <forward name="after_confirm_send_draft_bfl" path="/template/common_frame_template.jsp">
                <set-property property="leftFrame" value="/template/common_left_frame.jsp"/>
                <set-property property="rightFrame" value="/common/ack_approve.jsp"/>
                <set-property property="title" value="title.bfl.senddraftbfl"/>
            </forward>
            <forward name="after_recv_draft_bfl_ack" path="/template/common_frame_template.jsp">
                <set-property property="leftFrame" value="/template/common_left_frame.jsp"/>
                <set-property property="rightFrame" value="/bfl/recv_draft_bfl_ack.jsp"/>
                <set-property property="title" value="title.bfl.recvdraftbflack"/>
            </forward>
            <forward name="after_confirm_recv_draft_bfl_ack" path="/template/common_frame_template.jsp">
                <set-property property="leftFrame" value="/template/common_left_frame.jsp"/>
                <set-property property="rightFrame" value="/common/ack_approve.jsp"/>
                <set-property property="title" value="title.bfl.recvdraftbflack"/>
            </forward>
            <forward name="after_issue_clean_type_bfl" path="/template/common_frame_template.jsp">
                <set-property property="leftFrame" value="/template/common_left_frame.jsp"/>
                <set-property property="rightFrame" value="/bfl/issue_clean_type_bfl.jsp"/>
                <set-property property="title" value="title.bfl.issuecleantypebfl"/>
            </forward>
            
            <!-- Added by Pratheepa for CR148 -->
            <forward name="after_view_bfl" path="/template/common_frame_template.jsp">
		    <set-property property="leftFrame" value="/template/common_left_frame.jsp"/>
		    <set-property property="rightFrame" value="/bfl/bflRes.jsp"/>
		    <set-property property="title" value="title.bfl.bfl"/>
            </forward>
            
            <forward name="after_confirm_issue_clean_type_bfl" path="/template/common_frame_template.jsp">
                <set-property property="leftFrame" value="/template/common_left_frame.jsp"/>
                <set-property property="rightFrame" value="/common/ack_approve.jsp"/>
                <set-property property="title" value="title.bfl.issuecleantypebfl"/>
            </forward>
            <forward name="after_special_issue_clean_type_bfl" path="/template/common_frame_template.jsp">
                <set-property property="leftFrame" value="/template/common_left_frame.jsp"/>
                <set-property property="rightFrame" value="/bfl/special_issue_clean_type_bfl.jsp"/>
                <set-property property="title" value="title.bfl.specialissuecleantypebfl"/>
            </forward>
            <forward name="after_confirm_special_issue_clean_type_bfl" path="/template/common_frame_template.jsp">
                <set-property property="leftFrame" value="/template/common_left_frame.jsp"/>
                <set-property property="rightFrame" value="/common/ack_approve.jsp"/>
                <set-property property="title" value="title.bfl.specialissuecleantypebfl"/>
            </forward>
            <forward name="after_issue_final_bfl" path="/template/common_frame_template.jsp">
                <set-property property="leftFrame" value="/template/common_left_frame.jsp"/>
                <set-property property="rightFrame" value="/bfl/issue_final_bfl.jsp"/>
                <set-property property="title" value="title.bfl.issuefinalbfl"/>
            </forward>
            <forward name="after_confirm_issue_final_bfl" path="/template/common_frame_template.jsp">
                <set-property property="leftFrame" value="/template/common_left_frame.jsp"/>
                <set-property property="rightFrame" value="/common/ack_approve.jsp"/>
                <set-property property="title" value="title.bfl.issuefinalbfl"/>
            </forward>
            <forward name="after_customer_accept_bfl" path="/template/common_frame_template.jsp">
                <set-property property="leftFrame" value="/template/common_left_frame.jsp"/>
                <set-property property="rightFrame" value="/bfl/customer_accept_bfl.jsp"/>
                <set-property property="title" value="title.bfl.customeracceptbfl"/>
            </forward>
            <forward name="after_confirm_customer_accept_bfl" path="/template/common_frame_template.jsp">
                <set-property property="leftFrame" value="/template/common_left_frame.jsp"/>
                <set-property property="rightFrame" value="/common/ack_approve.jsp"/>
                <set-property property="title" value="title.bfl.customeracceptbfl"/>
            </forward>
            <forward name="after_print_bfl_reminder" path="/template/common_frame_template.jsp">
                <set-property property="leftFrame" value="/template/common_left_frame.jsp"/>
                <set-property property="rightFrame" value="/bfl/print_bfl_reminder.jsp"/>
                <set-property property="title" value="title.bfl.printbflreminder"/>
            </forward>
            <forward name="after_reminder_bfl" path="/bfl/reminder_bfl.jsp"/>
            <forward name="noreminder" path="/template/common_frame_template.jsp">
                <set-property property="leftFrame" value="/template/common_left_frame.jsp"/>
                <set-property property="rightFrame" value="/common/noreminder.html"/>
                <set-property property="title" value="title.bfl.printbflreminder"/>
            </forward>
            <forward name="after_confirm_print_bfl_reminder" path="/template/common_frame_template.jsp">
                <set-property property="leftFrame" value="/template/common_left_frame.jsp"/>
                <set-property property="rightFrame" value="/common/ack_approve.jsp"/>
                <set-property property="title" value="title.bfl.printbflreminder"/>
            </forward>
        </action>        
	</action-mappings>
    
    <!--<message-resources parameter="ApplicationResources-bfl"/>-->
</struts-config>