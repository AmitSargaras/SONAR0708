<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN" "http://jakarta.apache.org/struts/dtds/struts-config_1_3.dtd">
<struts-config>
    <form-beans type="org.apache.struts.action.ActionFormBean">
        <form-bean name="MaintainSystemParametersForm" type="com.integrosys.cms.ui.systemparameters.MaintainSystemParametersForm">
        </form-bean>
    
    </form-beans>
            
    <action-mappings type="com.integrosys.base.uiinfra.common.IntegroActionMapping">
        <action path="/MaintainSystemParameters"
            type="com.integrosys.cms.ui.systemparameters.MaintainSystemParametersAction"
            name="MaintainSystemParametersForm" scope="request">
            <forward name="maker_add_edit_sysparams_page" path="/template/common_template.jsp">
                <set-property property="rightFrame" value="/systemparameters/sysparams_maker_edit.jsp"/>
                <set-property property="title" value="title.sysparams.edit"/>
            </forward>
            <forward name="sysparams_maker_edit_successful" path="/template/common_template.jsp">
                <set-property property="rightFrame" value="/common/ack_submit.jsp"/>
                <set-property property="title" value="title.sysparams.edit"/>
            </forward>
            <forward name="work_in_process_page" path="/template/common_template.jsp">
                <set-property property="rightFrame" value="/common/wip.html"/>
                <set-property property="title" value="title.sysparams.edit"/>
            </forward>
            <forward name="checker_sysparams_page" path="/template/common_template.jsp">
                <set-property property="rightFrame" value="/systemparameters/sysparams_checker.jsp"/>
                <set-property property="title" value="title.sysparams.edit"/>
            </forward>
            <forward name="maker_close_sysparams_page" path="/template/common_template.jsp">
                <set-property property="rightFrame" value="/systemparameters/sysparams_checker.jsp"/>
                <set-property property="title" value="title.sysparams.edit"/>
            </forward>
            <forward name="common_approve_page" path="/template/common_template.jsp">
                <set-property property="rightFrame" value="/common/ack_approve.jsp"/>
                <set-property property="title" value="title.sysparams.edit"/>
            </forward>
            <forward name="common_reject_page" path="/template/common_template.jsp">
                <set-property property="rightFrame" value="/common/ack_reject.jsp"/>
                <set-property property="title" value="title.sysparams.edit"/>
            </forward>
            <forward name="view" path="/template/common_template.jsp">
                <set-property property="rightFrame" value="/systemparameters/sysparams_maker_view.jsp"/>
                <set-property property="title" value="title.sysparams.edit"/>
            </forward>
            <forward name="common_close_page" path="/template/common_template.jsp">
                <set-property property="rightFrame" value="/common/ack_close.jsp"/>
                <set-property property="title" value="title.sysparams.edit"/>
            </forward>
            <forward name="checker_general_parameter" path="/MaintainSystemParameters.do?event=checker_edit_read">
            </forward>
            <forward name="checker_conc_report" path="/MaintainConcReport.do?event=checker_edit_read">
            </forward>
            <forward name="maker_general_parameter" path="/MaintainSystemParameters.do?event=maker_edit_sysparams_read_rejected">
            </forward>
            <forward name="maker_conc_report" path="/MaintainConcReport.do?event=maker_edit_concreport_read_rejected">
            </forward>
            <forward name="maker_close_general_parameter" path="/MaintainSystemParameters.do?event=maker_close_sysparams">
            </forward>
            <forward name="maker_close_conc_report" path="/MaintainConcReport.do?event=maker_close_concreport">
            </forward>
            <forward name="after_to_track" path="/template/common_template.jsp">
                <set-property property="rightFrame" value="/systemparameters/sysparams_checker.jsp"/>
                <set-property property="title" value="title.sysparams.edit"/>
            </forward>
        </action>
    
    </action-mappings>
    
    <message-resources key="message-systemparam" parameter="ApplicationResources-systemparam"/>
</struts-config>