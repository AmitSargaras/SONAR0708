<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN" "http://jakarta.apache.org/struts/dtds/struts-config_1_3.dtd">
<struts-config>
    <form-beans type="org.apache.struts.action.ActionFormBean">
    
        <form-bean name="whatIfCondReportForm"
            type="com.integrosys.cms.ui.whatifana.WhatIfCondReportForm"/>

        <!-- What If Condition Reports ActionForm. -->
        <form-bean name="whatIfCondReportSearchForm"
            type="com.integrosys.cms.ui.whatifana.WhatIfCondReportSearchForm">
        </form-bean>           
         
    </form-beans>
            
    <action-mappings type="com.integrosys.base.uiinfra.common.IntegroActionMapping">
        <action path="/WhatIfCond"
            type="com.integrosys.cms.ui.whatifana.WhatIfCondReportAction"
            name="whatIfCondReportForm"
            validate="false" scope="request">

            <forward name="new" path="/template/common_template.jsp">
                <set-property property="rightFrame" value="/whatifana/whatifcond_new_reports.jsp"/>
                <set-property property="title" value="title.whatifcond"/>
            </forward>
            <forward name="generateResult" path="/template/common_template.jsp">
                <set-property property="rightFrame" value="/common/ack_submit_report_generation.jsp"/>
                <set-property property="title" value="title.whatifcond"/>
            </forward>
        </action>
          
        <!-- WhatIfCondReports Action. -->
        <action path="/WhatIfCondReportSearch" 
        	type="com.integrosys.cms.ui.whatifana.WhatIfCondReportSearchAction"
            name="whatIfCondReportSearchForm"
            validate="true" scope="request">
            <forward name="prepare_search" path="/template/common_template.jsp">
                <set-property property="rightFrame" value="/whatifana/whatifcond_search_reports.jsp"/>
                <set-property property="title" value="title.whatifcond.generated.report"/>
            </forward>
            <forward name="search_reports" path="/template/common_template.jsp">
                <set-property property="rightFrame" value="/whatifana/whatifcond_list_reports.jsp"/>
                <set-property property="title" value="title.whatifcond.generated.report"/>
            </forward>
            <forward name="get_report" path="/reports/display_report.jsp">
            </forward>
        </action>
        
        <action path="/RefreshCommonCodesWithAllOption" type="com.integrosys.cms.ui.whatifana.RefreshCommonCodesWithAllOptionAction" />

    </action-mappings>
    
    <message-resources key="message-whatifana" parameter="ApplicationResources-whatifana"/>
</struts-config>
